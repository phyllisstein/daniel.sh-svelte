{
    "search.exclude": {
        "**/.yarn": true,
        "**/.pnp.*": true
    },
    "typescript.enablePromptUseWorkspaceTsdk": true,
    "editor.indentSize": 4,
    "editor.tabSize": 4,
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": true,
        "source.fixAll.stylelint": true
    },
    "svelte.enable-ts-plugin": true,
    "[svelte]": {
        "togglequotes.chars": [
            "\"",
            "'",
            "`"
        ],
        "editor.indentSize": 4,
        "editor.tabSize": 4
    }
}
