[
    "trigger",
    "/app",
    {
        "name": "yarn-install",
        "expression": [
            "name",
            [
                "yarn.lock",
                ".yarnrc.yml"
            ]
        ],
        "command": [
            "/app/scripts/develop.sh",
            "yarn"
        ],
        "append_files": false
    }
]
