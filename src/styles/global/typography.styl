@import '../theme/index.styl'

p
    plumber-maison()

p
p.indent
    text-indent 1em

p.flush
*:not(p) + p
    text-indent 0

h1
    plumber-charlie(font-size: 5, leading-top: 5, leading-bottom: 1)
    font-weight 500

    &:first-child
        plumber-charlie(font-size: 5, leading-top: 1, leading-bottom: 1)

h2
    plumber-charlie(font-size: 4, leading-top: 3, leading-bottom: 0)
    font-weight 500

h3
    plumber-charlie(font-size: 3, leading-top: 3, leading-bottom: 0)
    font-weight 500

h4
    plumber-charlie(font-size: 3, leading-top: 3, leading-bottom: 0)
    font-weight 500

h5
    plumber-charlie(font-size: 3, leading-top: 2, leading-bottom: 0)
    font-weight 500

h6
    plumber-charlie(font-size: 3, leading-top: 1, leading-bottom: 0)
    font-weight 500
